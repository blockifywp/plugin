{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "blockify/slider",
  "title": "Slider",
  "description": "A simple, lightweight vanilla JS slider block.",
  "icon": "slides",
  "category": "blockify",
  "textdomain": "blockify",
  "keywords": [
    "slider",
    "carousel"
  ],
  "supports": {
    "align": true,
    "inserter": true,
    "color": {
      "gradients": true
    },
    "spacing": {
      "margin": true,
      "padding": true,
      "blockGap": true
    },
    "__experimentalBorder": {
      "width": true,
      "style": true,
      "color": true,
      "radius": true,
      "__experimentalDefaultControls": {
        "width": true,
        "color": true
      }
    }
  },
  "attributes": {
    "clientId": {
      "type": "string"
    },
    "slideWidth": {
      "type": "string",
      "default": "auto"
    },
    "autoplay": {
      "type": "boolean",
      "default": false
    },
    "perView": {
      "type": "integer",
      "default": 3
    },
    "showArrows": {
      "type": "boolean",
      "default": true
    },
    "showDots": {
      "type": "boolean",
      "default": true
    },
    "style": {
      "type": "object",
      "default": {
        "spacing": {
          "blockGap": "1em"
        }
      }
    }
  },
  "editorScript": "file:index.js",
  "script": "file:script.js",
  "editorStyle": "file:editor.css",
  "style": "file:style.css",
  "viewScript": "file:view.js"
}